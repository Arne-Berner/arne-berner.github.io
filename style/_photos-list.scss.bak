/* Root settings */
:root {
  /* Increase this value slightly to crop more on left/right (scales the image). */
  --crop-scale: 1.06;

  /* Tweak credit appearance */
  --credit-color: rgba(255, 255, 255, 0.9);
  --credit-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  --credit-left: clamp(10px, 2vw, 24px);
  --credit-bottom: clamp(10px, 2vw, 24px);
  --credit-size: clamp(12px, 1.3vw, 14px);
}

* {
  box-sizing: border-box;
}

html, body {
  height: 100%;
}

body {
  margin: 0;
  background: #000;
  color: #fff;
  font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
}

/* Hero layout */
.hero {
  min-height: 100dvh;
}

.hero__figure {
  position: relative;
  height: 100dvh;
  margin: 0;
  overflow: hidden;
  background: #000;
}

/* Fallback for browsers without dvh */
@supports not (height: 100dvh) {
  .hero__figure {
    height: 100vh;
  }
}

/*
  Image behavior:
  - Fits the viewport height
  - Width adjusts automatically (often wider than viewport), so the sides are cropped
  - Slight scale to ensure a bit more crop on left/right as requested
*/
.hero__image {
  display: block;
  height: 100%;
  width: auto;
  max-width: none;
  margin: 0 auto;
  object-fit: cover;
  /* Improves rendering of scaled images on some devices */
  image-rendering: auto;
}

/* Optional subtle left edge gradient to help credit readability */
.hero__figure::before {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(90deg, rgba(0,0,0,0.35) 0%, rgba(0,0,0,0) 25%);
  pointer-events: none;
}

/*
  Vertical copyright:
  - Anchored bottom-left
  - Text flows bottom â†’ top using vertical writing mode + 180deg rotation
*/
.hero__credit {
  position: absolute;
  left: var(--credit-left);
  bottom: var(--credit-bottom);
  color: var(--credit-color);
  font-size: var(--credit-size);
  letter-spacing: 0.08em;
  text-transform: uppercase;
  text-shadow: var(--credit-shadow);
  user-select: none;
  white-space: nowrap;

  writing-mode: vertical-rl;
  text-orientation: mixed;
  transform: rotate(180deg);
  transform-origin: bottom left;
  /* Prevent selection/interaction and keep it out of reading order if desired */
  pointer-events: none;
}

/* Respect safe-area insets on iOS */
@supports (padding: max(0px)) {
  .hero__credit {
    left: max(var(--credit-left), env(safe-area-inset-left));
    bottom: max(var(--credit-bottom), env(safe-area-inset-bottom));
  }
}

/* High-DPI and very small screens tweaks */
@media (max-width: 420px) {
  :root {
    --crop-scale: 1.08; /* crop a touch more on very narrow phones */
  }
  .hero__figure::before {
    background: linear-gradient(90deg, rgba(0,0,0,0.45) 0%, rgba(0,0,0,0) 30%);
  }
}
