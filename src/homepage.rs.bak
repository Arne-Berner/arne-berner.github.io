use leptos::prelude::*;
use leptos_router::components::A;

/// Renders the home page of your application.
#[component]
pub fn HomePage() -> impl IntoView {

    view! {
        // Fonts
        <link href="https://fonts.googleapis.com/css?family=Oswald:700&display=swap" rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/css?family=Quattrocento:400,700&display=swap" rel="stylesheet"/>
        // Global styles (ensure this path matches your setup)
        // <link href="/styles.css" rel="stylesheet"/>

        // Mobile nav toggle
        <NavBar/>


        <div class="hero-actor">
            <div class="actor-name">"Actor Name"</div>
            <div class="agency">"Represented by [Agency Name]"</div>
        </div>

        <section class="about-section">
            <h2>"About Me"</h2>
            <p>
                "I am a passionate actor dedicated to bringing stories to life on stage and screen. My motivation comes from the desire to connect with audiences and explore the depths of human emotion. Every role is a new adventure, a chance to discover and share something meaningful."
            </p>
        </section>

        <section id="photos" class="section">
            <h2>"Photos"</h2>
            <div class="photos-list">
              <img
                  src="/DSC01871-800.webp"
                  srcset="
                      /DSC01871-400.webp 400w,
                      /DSC01871-600.webp 600w,
                      /DSC01871-800.webp 800w,
                      /DSC01871-1024.webp 1024w,
                      /DSC01871-1200.webp 1200w,
                      /DSC01871-1600.webp 1600w,
                      /DSC01871-1920.webp 1920w
                  "
                  sizes="(max-width: 600px) 100vw, 800px"
                  alt="My Photo"
                  style="width: 100%; height: auto; border-radius: 8px;"
              />
            </div>
        </section>

        <section id="cv" class="section">
            <h2>"CV"</h2>
            <ul>
                <li><strong>"Education:"</strong> "Drama School XYZ, 2018-2021"</li>
                <li><strong>"Notable Roles:"</strong> "Hamlet in 'Hamlet' (Theatre), Alex in 'Dreams' (Film)"</li>
                <li><strong>"Awards:"</strong> "Best Actor, Festival ABC 2022"</li>
            </ul>
        </section>

        <section id="contact" class="section" style="margin-bottom:2rem">
            <h2>"Contact"</h2>
            <p>
                "For bookings and inquiries, please contact:"<br/>
                <strong>"[Agency Name]"</strong><br/>
                "Email: " <a href="mailto:agency@email.com">"agency@email.com"</a><br/>
                "Phone: " <a href="tel:123456789">"123-456-789"</a>
            </p>
        </section>
    }
}

#[island]
fn Counter() -> impl IntoView {
    let count = RwSignal::new(0);
    let on_click = move |_| *count.write() += 1;

    view! {
        <button on:click=on_click>"Click Me: " {count}</button>
    }
}

#[island]
fn NavBar() -> impl IntoView {
    let nav_open = RwSignal::new(false);
    let toggle_nav = move |_| nav_open.update(|o| *o = !*o);
    let close_nav = move |_| nav_open.set(false);
    view! {
        <nav class="home-nav">
            <div class="logo">"Actor Name"</div>

            // Accordion/hamburger toggle for small screens
            <button
                class="nav-toggle"
                aria-expanded=move || nav_open.get().to_string()
                aria-controls="primary-navigation"
                on:click=toggle_nav
            >
                <span class="sr-only">"Toggle navigation"</span>
                <span class="hamburger" class:open=move || nav_open.get()></span>
            </button>

            <ul id="primary-navigation" class="nav-links" class:open=move || nav_open.get()>
                <li><a href="#photos" on:click=close_nav>"Photos"</a></li>
                <li><a href="#cv" on:click=close_nav>"CV"</a></li>
                <li><a href="#contact" on:click=close_nav>"Contact"</a></li>
            </ul>
        </nav>
    }
}

